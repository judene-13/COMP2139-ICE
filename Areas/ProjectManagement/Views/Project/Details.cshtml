@model COMP2139_ICE.Areas.ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card mb-3">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <p class="card-text">@Model.Description</p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Project ID:</strong> @Model.ProjectId</li>
                <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</li>
                <li class="list-group-item"><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</li>
                <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
            </ul>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" asp-controller="Project" class="btn btn-secondary">Back to Projects</a>
            </div>
        </div>
    </div>

    <div id="projectComments">
        <h3>Comments</h3>
        <div id="commentsList" class="comments-container"></div>

        <form id="addCommentForm" class="mt-3">
            <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Add a comment..." required></textarea>
            </div>
            <button type="submit" class="btn btn-success">Post Comment</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/projectComments.js"></script>
    <script>
        $(document).ready(function () {
            var projectId = $('#projectComments input[name="ProjectId"]').val();
            loadComments(projectId);
        });
    </script>
}
